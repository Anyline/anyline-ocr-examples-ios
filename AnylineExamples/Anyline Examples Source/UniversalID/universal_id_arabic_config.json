{
    "camera" : {
        "captureResolution" : "1080p",
        "zoomGesture": true
    },
    "flash" : {
        "mode": "manual",
        "alignment": "bottom_right",
        "imageOn": "flash_on",
        "imageOff": "flash_off"
    },
    "viewPlugin" : {
        "plugin":{
            "id":"ID",
            "idPlugin": {
                "arabicIdConfig": {
                    "faceDetection": true,
                    "allowedLayouts": {
                        "mrz": [],
                        "idFront": [],
                        "drivingLicense": []
                    },
                    "idFront": {
                        "fullName": {"scanOption": 0, "minConfidence": 60},
                        "dateOfBirth": {"scanOption": 0, "minConfidence": 60},
                        "placeOfBirth": {"scanOption": 1, "minConfidence": 60},
                        "dateOfExpiry": {"scanOption": 1, "minConfidence": 60},
                        "documentNumber": {"scanOption": 0, "minConfidence": 60},
                        "nationality": {"scanOption": 1, "minConfidence": 60}
                    },
                    "drivingLicense": {
                        "fullName": {"scanOption": 0, "minConfidence": 60},
                        "dateOfBirth": {"scanOption": 0, "minConfidence": 60},
                        "placeOfBirth": {"scanOption": 1, "minConfidence": 60},
                        "dateOfExpiry": {"scanOption": 1, "minConfidence": 60},
                        "documentNumber": {"scanOption": 0, "minConfidence": 60},
                        "nationality": {"scanOption": 0, "minConfidence": 60}
                    }
                }
            }
        },
        "cutoutConfig" : {
            "style": "animated_rect",
            "maxWidthPercent": "90%",
            "maxHeightPercent": "90%",
            "alignment": "center",
            "strokeWidth": 3,
            "cornerRadius": 8,
            "strokeColor": "FFFFFF",
            "outerColor": "000000",
            "outerAlpha": 0.3,
            "ratioFromSize" : {
                "width": 50,
                "height": 31
            },
            "cropPadding": {
                "x": -50,
                "y": -50
            },
            "cropOffset": {
                "x": 0,
                "y": 0
            },
            "feedbackStrokeColor": "0099FF"
        },
        "scanFeedback" : {
            "style": "CONTOUR_RECT",
            "visualFeedbackRedrawTimeout": 100,
            "strokeColor": "0099FF",
            "fillColor" : "220099FF",
            "beepOnResult": true,
            "vibrateOnResult": true,
            "strokeWidth": 2
        },
        "cancelOnResult" : true
    }
}
