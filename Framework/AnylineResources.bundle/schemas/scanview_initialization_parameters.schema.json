{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "ScanViewInitializationParameters",
  "description": "Schema for ScanView JSON initialization parameters",
  "type": "object",
  "javaType" : "io.anyline.plugin.config.ScanViewInitializationParameters",
  "properties": {
    "correlationId": {
      "description": "An optional uuid (v4) to correlate scans and data points within a workflow.",
      "type": "string",
      "pattern": "[[:xdigit:]]{8}(?:-[[:xdigit:]]{4}){3}-[[:xdigit:]]{12}"
    },
    "demo": {
      "description": "Data contained within the QR code that's required to unlock scanning with the Showcase Apps.",
      "type": "object",
      "properties": {
        "sfdc": {
          "type": "object",
          "properties": {
            "accountId": {
              "type": "string"
            },
            "oppId": {
              "type": "string"
            },
            "accountName": {
              "type": "string"
            }
          }
        },
        "qrVersion": {
          "type": "integer"
        },
        "validityDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        }
      },
      "required": [
        "sfdc",
        "qrVersion"
      ]
    }
  }
}
